{
  "all": true,
  "include": [
    "controllers/**/*.js",
    "routes/**/*.js",
    "server.js"
  ],
  "exclude": [
    "tests/**",
    "node_modules/**",
    "coverage/**",
    "api/**"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 70,
  "report-dir": "./coverage"
}
